extends ../jade-components/logged-in-page.jade

block title
	title New Experience | SupTracked

block content
	main
		.container
			.row
				.col.s12.m8.offset-m2
					form
						.card.blue-grey.darken-1
							.card-content.white-text
								span.card-title New Experience
								.row
									.input-field.col.s12
										input#title(type='text', required)
										label(for='title') Title
								.row
									.input-field.col.s12
										input.datepicker#date(type='date', required)
										label(for='date') Date
							.card-action
								.row
									.col.s6.offset-s6.right-align
										button.btn.waves-effect.waves-light(type='submit', value='create')
											| Create
											i.material-icons.right add

block scripts
	script(src='js/newexperience.js')
